{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "laravel-tips",
  "title": "Laravel Tips",
  "description": "Get or search laravel tips in Raycast",
  "icon": "command-icon.png",
  "author": "Godruoyi",
  "categories": [
    "Productivity",
    "Developer Tools",
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "random",
      "title": "Random",
      "description": "Random a lucky tip",
      "mode": "view"
    },
    {
      "name": "search",
      "title": "Search",
      "description": "Search tips by keyword",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "binaryPath",
      "description": "Specify the path to laraveltips binary, default is /usr/local/bin/laraveltips",
      "type": "textfield",
      "title": "Binary Path",
      "placeholder": "/usr/local/bin/laraveltips",
      "required": false
    },
    {
      "name": "storagePath",
      "description": "Specify the path to store tips, default is $HOME/.laravel",
      "type": "textfield",
      "title": "Storage Path",
      "placeholder": "$HOME/.laravel",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.52.1",
    "@raycast/utils": "^1.7.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
